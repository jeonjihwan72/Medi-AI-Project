<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="261dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/main_page_guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mediai_logo" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_page_guideline5"
        app:layout_constraintEnd_toStartOf="@+id/main_page_guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_page_guideline_left"
        app:layout_constraintTop_toTopOf="@+id/main_page_guideline1"
        app:layout_constraintVertical_bias="0.0">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_page_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/indicatior"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_page_viewpager" />

    </FrameLayout>

    <TextView
        android:id="@+id/main_page_tip_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableLeft="@drawable/article_icon"
        android:fontFamily="@font/pretendard_black"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="오늘의 소식"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/main_page_guitdline9"
        app:layout_constraintEnd_toStartOf="@+id/main_page_guideline_right"
        app:layout_constraintStart_toStartOf="@+id/main_page_guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/main_page_guideline5" />

    <Space
        android:id="@+id/main_page_tip_space"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/main_page_tip_title"/>


    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:linksClickable="true"
        app:layout_constraintBottom_toTopOf="@+id/main_page_guideline7"
        app:layout_constraintEnd_toStartOf="@+id/main_page_guideline_right"
        app:layout_constraintStart_toStartOf="@+id/main_page_guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/main_page_tip_space" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04136253" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96107054" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_page_guitdline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79" />

</androidx.constraintlayout.widget.ConstraintLayout>